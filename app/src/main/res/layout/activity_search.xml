                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hostel :-"
                    android:textSize="25dp"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_hostel1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room  :-"
                    android:textSize="25dp"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_room1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SN1"
                    android:id="@+id/searchroom1_sn1"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchroom1_id1"
                    android:hint="ID1"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
